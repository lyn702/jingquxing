<view class="container">
    <view class='empty' wx:if="{{empty}}">
        <image src='../../image/empty.png'></image>
        <view>门票列表为空，马上扫码购票吧</view>
    </view>
    <view>
        <!-- 未使用 -->
        <!-- 未使用联程卡 -->
        <view class='card' wx:for="{{history0}}" wx:for-item="order" id="{{order.id}}" wx:if="{{order.type == '联程卡'}}" wx:key="id">
