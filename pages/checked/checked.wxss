/* pages/buyticket/buyticket.wxss */

page {
    height: 100%;
    background-color: #eee;
    font-size: 14pt;
    padding: 0;
}

.top {
    display: flex;
    justify-content: space-between;
    width: 90%;
    padding: 2%;
    margin-left: 3%;
    margin-top:20px;
    background-color: white;
}

.time {
    font-size: 24pt;
    color: #38404a;
    display: inline-block;
    width:40%;
    font-weight: bold;
    line-height: 28px;
    margin:20px auto;
    text-align: center;
}

.day {
    display: inline-block;
    font-size: 16pt;
    color: #525e6f;
    width:50%;
    margin:10px auto;
    text-align: center;
}

.ticket {
    width: 90%;
    padding: 2%;
    margin-left: 3%;
    margin-top:20px;
    background-color: white;
}

