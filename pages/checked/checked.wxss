.classname {
    margin-top: 5%;
}

.ticketinfo {
    margin-top: 5%;
}

.ticketList {
    padding: 10px;
    font-size: 18px;
    color: #5E5E5E;
    border-style: solid;
    border-width: 1px;
    border-top: 0px;
    border-left: 0px;
    border-right: 0px;
    border-color: rgba(153, 153, 153, 1);
}

.userinfo {
    margin-top: 10px;
    margin-left: 10px;
    font-size: 18px;
    color: #949494;
}

#confirm {
    position: fixed;
    top:86%;
    left:5%;
    font-family: 黑体;
    width: 90%;
    font-size: 14pt;
