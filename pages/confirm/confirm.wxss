/* pages/confirm/confirm.wxss */

page {
  background: #fff;
}

.paybody {
  width: 710rpx;
  border-radius: 5px;
  margin: 0 auto;
  background: white;
  font-size: 14pt;
  padding-left: 20rpx;
}

.pay_head {
  width: 750rpx;
  height: 30px;
  background: #eee;
  padding-top:10rpx;
}
.pay_head>view{
  padding-left:30rpx;
  width:690rpx;
}


.tip {
  height: 30px;
  margin-top: 10px;
  color: #333333;
  font-size: 1.2rem;
}

.tips {
    color: #949494;
    font-size: 14px;
}

.tips>image {
    margin-top: 5px;
    width: 25px;
    height: 25px;
}

.info {
  margin-bottom: 10px;
}

.info view {
  height: 30px;
}

.total {
  width: 100%;
  height: 30px;
}

.ticket {
    margin-top: 10px;
}

.name, .number, .price {
  display: inline-block;
}

.name {
  width: 20%;
}

.number {
  width: 40%;
}

.detail {
  /*margin-top: 10px;
  margin-bottom: 10px;*/
  padding: 20px;
  color: #666666;
  font-size: 16px;
}

.price {
  width: 30%;
}

.channel {
  margin-top: 20rpx;
  color: #666;
}


.total_money{
  width:40%;
  display: inline-block;
}
.checkin {
  position: fixed;
  top: 90%;
  left: 5%;
  width: 90%;
}

.qrcode {
    margin-top: 10px;
    height: 350rpx;
    width:350rpx;
    margin-left: 180rpx;
}

.qrcode>canvas {
  width: 350rpx;
  height: 350rpx;
}
.used{
  background: red;
  color:white;
  font-size:13pt;
}
