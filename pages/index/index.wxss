/* pages/t/t.wxss */

page {
  background: #eee;
}



.ticket {
  background: white;
  width: 710rpx;
  /* height: 100px; */
  margin-top: 10px;
  margin-left: 20rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #aaa;
}

.price {
  float: left;
  width: 28%;
  height: 100px;
  border-right: 2rpx dashed #555;
}

.tprice {
  height: 50px;
  margin-top: 10px;
  font-size: 24px;
  line-height: 50px;
  text-align: center;
}

.type {
  padding: 2px;
  font-size: 12px;
  background: red;
  color: #eee;
  margin-left: 60rpx;
  border-radius: 3px;
}

.price>text {
  font-size: 24px;
}

.t_info {
  display: inline-block;
  width: 50%;
  height: 100px;
  font-size: 13px;
}

.t_info>view {
  margin-top: 8rpx;
  margin-left: 18rpx;
}

.add_t {
  display: inline-block;
  width: 20%;
}

.add>image {
  width: 60px;
  height: 60px;
}

.tips>image {
    width: 30px;
    height: 30px;
}

.info {
  margin-top: 0;
}

.detail, .tips {
  font-size: 10pt;
  padding: 12rpx;
}

.tips {
    color: #949494;
}

.index_footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
}

.index_footer_head {
  display: flex;
  height: 90rpx;
  background: white;
}

.index_footer_head_1 {
  margin: 10px;
  margin-left: 10px;
  width: 85%;
  height: 100%;
  color: #5E5E5E;
}

.index_footer_head_2 {
  margin: 10px;
  width: 15%;
  height: 100%;
  color: #5E5E5E;
}

.index_footer_tick {
  width: 100%;
  height: 100%;
  border-style: solid;
  border-width: 1px;
  border-left: 0px;
  border-right: 0px;
  border-bottom: 0px;
  border-color: rgba(153, 153, 153, 1);
}

/***********购物车门票***********/
.index_footer_for {
  display: flex;
  /* width: 710rpx;
  height: 100rpx;
  margin-left: 20rpx; */
  width: 100%;
  height: 40px;
  margin: 10px;
}

.index_footer_tick_name {
  width: 40%;
}

.index_footer_tick_price {
  width: 30%;
  color: #ce7e84;
}

.index_footer_tick_number {
  width: 30%;
  display: flex;
}

.index_footer_tick_number_img {
  width: 40rpx;
  height: 40rpx;
}

.index_footer_tick_number_num {
  color: #ce7e84;
  display: flex;
}


/****底栏下单*****/
.index_footer_pay {
    width: 100%;
    height: 55px;
    border-style: solid;
    border-width: 1px;
    border-left: 0px;
    border-right: 0px;
    border-bottom: 0px;
    border-color: rgba(153, 153, 153, 1);
    display: flex;
    display: -webkit-box;
}

.index_footer_pay_total {
  width: 550rpx;
  background: white;
  display: flex;
  display: -webkit-box;
}

.index_footer_pay_total_notice {
  width: 25%;
  position: relative;
}

.index_footer_pay_total_img {
    margin-top:2px;
    margin-left:40rpx;
    width:100rpx;
    height:100rpx;
}

.index_footer_pay_total_price {
  margin: 30rpx;
  margin-left: 50rpx;
  width: 30%;
  color: white;
}

.index_footer_pay_total_img_notice {
  width: 20px;
  height: 20px;
  line-height: 20px;
  font-size: 10pt;
  color: #fff;
  text-align: center;
  background-color: #f00;
  border-radius: 50%;
  position: absolute;
  right: -15px;
  top: 0px;
}

.index_footer_pay_pay {
  width: 200rpx;
  height: 100%;
  display: flex;
  display: -webkit-box;
}

.index_footer_pay_pay_butt {
  width: 100%;
  height: 100%;
  color: white;
  background: #6acc77;
  border: none;
  border-radius: 0;
  line-height: 55px;
}

.ticket_info {
  display: flex;
  width: 100%;
  height: 85px;
}

.add_tic {
  height: 100%;
  width: 110rpx;
}

.selected {
  background: #ccc;
}
