/* pages/t/t.wxss */

page {
  background: #eee;
}

.main {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.package {
  background: red;
  color: white;
}

.ticket {
  background: white;
  width: 95%;
  /* height: 100px; */
  margin-top: 10px;
  margin-left: 2%;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #aaa;
}

.price {
  float: left;
  width: 28%;
  height: 100px;
  border-right: 2rpx dashed #555;
}

.tprice {
  height: 50px;
  margin-top: 10px;
  font-size: 24px;
  line-height: 50px;
  text-align: center;
}

.type {
  padding:2px;
  font-size: 12px;
  background: red;
  color: #eee;
  margin-left:60rpx;
  border-radius: 3px;
}

.price>text {
  font-size: 24px;
}

.t_info {
  display: inline-block;
  width: 50%;
   height: 100px; 
  font-size: 13px;
}

.t_info>view {
  margin-top: 8rpx;
  margin-left: 18rpx;
}

.add_t{
  display: inline-block;
  width: 20%;
}

.add>image{
  width:60px;
  height: 60px;
}

.info{
  margin-top:0;
}

.detail,.tips{
  font-size: 10pt;
  padding:12rpx;
}

.tips{
  color:red;
}

.index_footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
  opacity: 1;
  /* border-top:500px solid rgba(0.5,0.5,0.5); */
}

.index_footer_head {
  display: flex;
  height: 80rpx;
  background: #0099ff;
}

.index_footer_head_1 {
  margin: 10rpx;
  margin-left: 10rpx;
  width: 560rpx;
  height: 100%;
  color: white;
}

.index_footer_head_2 {
  margin: 10rpx;
  width: 160rpx;
  height: 100%;
  color: white;
}

.index_footer_tick {
  width: 100%;
  height: 100%;
 
}

.index_footer_for {
  display: flex;
  width: 710rpx;
  height: 100rpx;
  margin: 20rpx;
  /* border-bottom: 1px solid #ececec; */
}

.index_footer_tick_name {
  width: 40%;
}

.index_footer_tick_price {
  width: 30%;
  color: #ce7e84;
}

.index_footer_tick_number {
  width: 30%;
  display: flex;
}

.index_footer_tick_number_img {
  width: 50rpx;
  height: 50rpx;
}

.index_footer_tick_number_num {
  color: #ce7e84;
  display: flex;
}

.index_footer_pay {
  width: 100%;
  height: 55px;
  display: flex;
   display: -webkit-box;
}

.index_footer_pay_total {
  width: 550rpx;
  background: #525d6f;
  display: flex;
   display: -webkit-box;
}

.index_footer_pay_total_notice {
  width: 25%;
  position: relative;
}

.index_footer_pay_total_img {
  margin-top: 15px;
  margin-left: 10rpx;
  width: 100%;
  height: 40px;
}

.index_footer_pay_total_price {
  margin: 30rpx;
  margin-left: 50rpx;
  width: 30%;
  color: white;
}

.index_footer_pay_total_img_notice {
  width: 24px;
  height: 24px;
  line-height: 24px;
  font-size: 12pt;
  color: #fff;
  text-align: center;
  background-color: #f00;
  border-radius: 50%;
  position: absolute;
  right: -15px;
  top: 0px;
}

.index_footer_pay_pay {
  width: 200rpx;
  height: 100%;
}

.index_footer_pay_pay_butt {
  width: 100%;
  height: 100%;
  color: white;
  background: #6acc77;
  border: none;
  border-radius: 0;
  line-height: 55px;
}

.ticket_info {
  display: flex;
   display: -webkit-box;
  width: 100%;
  height: 85px;
}

.add_tic {
  height: 100%;
  width: 110rpx;
}

.selected{
  background: #ccc;
}
