<view class="container">
    <view class='empty' wx:if="{{empty}}">
        <image src='../../image/empty.png'></image>
        <view>门票列表为空，马上扫码购票吧</view>
    </view>
    <!-- 如果卡包为空，不显示卡 -->
    <!-- 卡包栏 -->
    <view>
        <view class='title'>
            <span class='cards'>卡包</span>
            <span class='all' id='all_card' bindtap="showCards">全部></span>
        </view>
        <!-- 联程卡的显示 -->
        <view class='card limit' wx:for="{{history0}}" wx:for-item="order" id="{{order.id}}" wx:key="id" wx:if="{{order.type == '联程卡'}}" bindtap="detail">
                <view class='parkname'>{{order.scene}}</view>
                <view class='time_limit'>{{order.type}}</view>
                <view>有效期：长期有效</view>
        </view>
        <!-- 次卡的显示 -->
        <view class='card limit' wx:for="{{history0}}" wx:for-item="order" id="{{order.id}}" wx:key="id" wx:if="{{order.type == '次卡'}}" bindtap="detail">
                <view class='parkname'>{{order.scene}}</view>
                <view class='time_limit'>{{order.type}}</view>
                <view>有效期：长期有效</view>
        </view>
        <!-- 期限卡的显示 -->
        <view class='card limit' wx:for="{{history0}}" wx:for-item="order" id="{{order.id}}" wx:key="id" wx:if="{{order.type == '期限卡'}}" bindtap="detail">
                <view class='parkname'>{{order.scene}}</view>
                <view class='time_limit'>{{order.type}}</view>
                <view>有效期：{{order.validtime}}</view>
        </view>
    </view>
    <!-- <view wx:else>
        出错了
    </view> -->
    <!-- 票包为空，不显示票 -->
    <!-- 票包栏 -->
    <view>
        <view class='title'>
            <span class='cards'>票包</span>
            <span class='all' id='all_card' bindtap="showHis">全部></span>
        </view>
        <view class="tickets_list" wx:for="{{history0}}" wx:for-item="order" id="{{order.id}}" wx:if="{{order.type == '单项票'}}" wx:key="id" bindtap="detail">
            <view class="top">
                <span class="type">{{order.type}}</span>
                <span class="status">{{order.status}}</span>
            </view>
            <view class='line'></view>
            <view class="ticket ">
                <view class='t_left'>
                    <view>{{order.scene}}</view>
                    <view>
                        <span class="ticket_num" wx:for="{{order.tickets}}" wx:for-item="ticket" wx:key="id">{{order.channel}}</span>
                        <span class='number' wx:for="{{order.tickets}}" wx:for-item="ticket" wx:key="id">{{ticket.num}}人</span>
                    </view>
                    <view class="buyday">
                        <text>购票日期：{{order.boughtdate}}</text>
                        <!-- <text class="valietime">入场时间：{{order.validtime}}</text> -->
                    </view>
                </view>
                <view class='t_right'>
                    <button>去检票</button>
                </view>
            </view>
        </view>
    </view>

    <!-- 未使用的联程票门票列表 -->
    <view class="ticket " wx:for="{{order.tickets}}" wx:for-item="ticket" wx:key="id" wx:if="{{order.is_coupon=='1'}}">
        <view class='t_left'>
            <view>{{order.scene}}{{ticket.label}}
                <text class="ticket_num">{{ticket.num}}张</text>
            </view>
            <view class=''>项目包含：{{order.channel}}</view>

            <view class="buyday">
                <text>购票日期：{{order.boughtdate}}</text>
            </view>
        </view>
        <view class='t_right'>
            <button>去检票</button>
        </view>
    </view>

    <!-- 使用中的门票列表 -->
    <view class="tickets_list" wx:for="{{history1}}" wx:for-item="order" id="{{order.id}}" wx:key="id" wx:if="{{order.is_coupon=='1'}}" bindtap="detail">
        <view class="top">
            <span class="type">{{order.type}}</span>
            <span class="status">{{order.status}}</span>
        </view>
        <view class='line'></view>
        <view class="ticket " wx:for="{{order.tickets}}" wx:for-item="ticket" wx:key="id">
            <view class='t_left'>
                <view>{{order.scene}}{{ticket.label}}
                    <text class="ticket_num" style='font:13pt red '>{{ticket.num}}张</text>
                </view>
                <view class='items'>项目包含：{{order.channel}}</view>

                <view class="buyday">
                    <text>购票日期：{{order.boughtdate}}</text>
                    <!-- <text class="valietime">入场时间：{{order.validtime}}</text> -->
                </view>
            </view>
            <view class='t_right'>
                <button>
        去检票
      </button>
            </view>
        </view>
    </view>

    <!-- 使用过的门票记录 -->
    <view class="tickets_list" wx:for="{{history2}}" wx:for-item="order" id="{{order.id}}" wx:key="id" wx:if="{{showHistory=='visible'}}">
        <view class="top">
            <span class="type">{{order.type}}</span>
            <span class="status">{{order.status}}</span>
        </view>
        <view class='line'></view>
        <view class="ticket " wx:for="{{order.tickets}}" wx:for-item="ticket" wx:key="id">{{order.scene}}{{ticket.label}}
            <text class="ticket_num">{{ticket.num}}张</text>
        </view>
        <view class=''>项目包含：{{order.channel}}</view>

        <view class="buyday">
            <text>购票日期：{{order.boughtdate}}</text>
            <text class="usetime">使用时间：{{order.usetime}}</text>
        </view>
    </view>
</view>


<view class="saoma" bindtap="scanqrcode">
    <image class="scancode" src="../../image/saoma1.png"></image>
    <view class="saoma1">
        <text id="test">{{btn}}</text>
    </view>
</view>
